<h1>Listing clothings</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Style</th>
      <th>Size</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clothings.each do |clothing| %>
      <tr id="clothing<%=clothing.id.to_s%>">
        <td><%= clothing.color %></td>
        <td><%= clothing.brand %></td>
        <td><%= clothing.price %></td>
        <td><%= clothing.style %></td>
        <td><%= clothing.size %></td>
        <td><%= link_to 'Show', clothing %></td>
        <td><%= link_to 'Edit', edit_clothing_path(clothing) %></td>
        <td><%= link_to 'Destroy', clothing, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

